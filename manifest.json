{
  "manifest_version": 2,
  "name": "quick-cmd",
  "version": "0.2.2",
  "description": "An add-on that provides a vscode like quick-command popup. Open with Alt-Shift-P",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{6943418e-1aea-4faa-be6f-6d06dd9609e9}",
      "strict_min_version": "63.0"
    }
  },
  "content_scripts": [],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.svg",
      "38": "icons/icon.svg"
    },
    "default_title": "quick-cmd",
    "default_popup": "dist/popup.html"
  },
  "permissions": ["bookmarks", "storage", "tabs", "tabHide", "history", "search"],
  "options_ui": {
    "page": "dist/options.html",
    "browser_style": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
          "default": "Alt+Shift+P"
      }
    }
  }
}
